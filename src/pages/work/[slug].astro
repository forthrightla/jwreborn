---
// src/pages/work/[slug].astro - cleaned up version
import { getCollection } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import SimplifiedCard from '../../components/SimplifiedCard.astro';


// Generate static paths for all case studies
export async function getStaticPaths() {
  const caseStudies = await getCollection('case-studies');
  return caseStudies.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Get other case studies for "Other case studies" section
const recommendedSlugs = ['axs-event-entry-case-study', 'cerebral-case-study'];

// If we're currently on AXS or Cerebral, swap it out for Ribbon
let finalRecommendations = [];
if (entry.slug === 'axs-event-entry-case-study') {
  finalRecommendations = ['cerebral-case-study', 'ribbon-legalzoom-case-study'];
} else if (entry.slug === 'cerebral-case-study') {
  finalRecommendations = ['axs-event-entry-case-study', 'ribbon-legalzoom-case-study'];
} else {
  // For all other case studies, show AXS and Cerebral
  finalRecommendations = recommendedSlugs;
}

// Get the case studies by slug
const allCaseStudies = await getCollection('case-studies');
const recommendedCaseStudies = finalRecommendations
  .map(slug => allCaseStudies.find(study => study.slug === slug))
  .filter(study => study); // Filter out any undefined entries

// Check if this case study requires a password
const isPasswordProtected = !!entry.data.password;
---

<Layout
  title={`Josh Wright - ${entry.data.title}`}
  currentNav="case-studies"
  description={entry.data.subtitle}
  image={entry.data.thumbnail}
  type="article"
>
  <main id="content" class="site-content">
    <div class="outer">
      <div class="inner">
        {isPasswordProtected ? (
          <article class="post project post-full">
            <!-- Modern Hero with Overlapping Card -->
            <div class="case-hero">
              {entry.data.banner && (
                <div class="case-hero__image">
                  <img
                    src={entry.data.banner}
                    alt={entry.data.title}
                  />
                </div>
              )}
              <div class="case-hero__card">
                <h1 class="case-hero__title">{entry.data.title}</h1>
                <p class="case-hero__subtitle">{entry.data.subtitle}</p>
              </div>
            </div>

            <div class="post-content inner-small">
              <div class="password-protection">
                <h3>Password required</h3>
                <p>
                  This case study contains confidential information and requires a password to view.
                  Please enter the password you received to access this content.
                </p>

                <div class="password-form">
                  <div id="password-error" class="password-error" style="display: none;" role="alert" aria-live="polite">
                    Incorrect password. Please try again or <a href="mailto:josh@joshuajwright.com">contact me</a> to request access.
                  </div>

                  <div class="form-group">
                    <label for="case-study-password" class="sr-only">Enter case study password</label>
                    <input
                      type="password"
                      id="case-study-password"
                      name="password"
                      placeholder="Enter password"
                      class="password-input"
                      aria-describedby="password-error password-help"
                      autocomplete="current-password"
                    />
                    <button id="submit-password" class="password-submit" type="button">
                      <span class="button-text">Access Case Study</span>
                      <span class="loading-spinner" style="display: none;" aria-hidden="true">
                        <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
                          <circle cx="8" cy="8" r="6" stroke="currentColor" stroke-width="2" opacity="0.25"/>
                          <path d="M8 2a6 6 0 0 1 6 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                      </span>
                    </button>
                  </div>
                  <div id="password-help" class="password-help">
                    Passwords are case-sensitive and provided upon request.
                  </div>
                </div>

                <p class="password-footnote">
                  Don't have the password? Feel free to <a href="mailto:josh@joshuajwright.com">reach out</a> if you'd like to discuss this work or <a href="/case-studies">check out my other case studies</a>.
                </p>
              </div>
            </div>
          </article>
        ) : (
          <!-- Default rendering for all case studies -->
          <article class="post project post-full">
            <!-- Modern Hero with Glassmorphism Card -->
            <div 
              class="case-hero"
              style={`--case-accent: ${entry.data.accentColor || 'var(--color-accent)'}; ${entry.data.heroWashColor ? `--hero-wash-color: ${entry.data.heroWashColor}` : ''}`}
            >
              {entry.data.banner && (
                <div class="case-hero__image">
                  <div class="case-hero__image-inner" data-parallax>
                    <img
                      src={entry.data.banner}
                      alt={entry.data.title}
                    />
                    <div class="case-hero__overlay"></div>
                  </div>
                  <div class="case-hero__wash"></div>
                </div>
              )}
              <div class="case-hero__card">
                <h1 class="case-hero__title">{entry.data.title}</h1>
                <p class="case-hero__subtitle">{entry.data.subtitle}</p>
                
                {(entry.data.goal || entry.data.responsibilities || entry.data.duration) && (
                  <div class="case-hero__details">
                    {entry.data.goal && (
                      <div class="case-hero__detail">
                        <span class="case-hero__detail-label">Goal</span>
                        <span class="case-hero__detail-value">{entry.data.goal}</span>
                      </div>
                    )}
                    {entry.data.responsibilities && (
                      <div class="case-hero__detail">
                        <span class="case-hero__detail-label">Responsibilities</span>
                        <span class="case-hero__detail-value">{entry.data.responsibilities}</span>
                      </div>
                    )}
                    {entry.data.duration && (
                      <div class="case-hero__detail">
                        <span class="case-hero__detail-label">Duration</span>
                        <span class="case-hero__detail-value">{entry.data.duration}</span>
                      </div>
                    )}
                  </div>
                )}
              </div>
            </div>

            <div class="post-content inner-small">
              <Content />
            </div>
          </article>
        )}
        
        <!-- Other case studies section -->
        <section class="portfolio-block block outer">
          <div class="inner">
            <div class="block-header">
              <h2 class="block-title line-top">Other case studies</h2>
            </div>
            <div class="block-content">
              <div class="portfolio-feed">
                {recommendedCaseStudies.map(caseStudy => (
                  <SimplifiedCard
                    href={`/work/${caseStudy.slug}`}
                    title={caseStudy.data.title}
                    img={caseStudy.data.thumbnail}
                    client={caseStudy.data.client}
                    highlight={caseStudy.data.highlight}
                  />
                ))}
              </div>
            </div>
          </div>
          <div class="block-content">
            <p style="text-align:center;">
              <a href="mailto:josh@joshuajwright.com" class="button">Get in touch</a>
            </p>
          </div>
        </section>
      </div>
    </div>
  </main>
</Layout>

<style>
  .password-form {
    margin: 2rem 0;
  }

  .password-input {
    width: 100%;
    padding: 0.75rem;
    border: 2px solid var(--color-border);
    border-radius: var(--radius-sm);
    font-size: 1rem;
    margin-bottom: 1rem;
    transition: border-color var(--transition-fast);
  }

  .password-input:focus {
    outline: none;
    border-color: var(--color-accent);
  }

  .password-submit {
    width: 100%;
    padding: 0.75rem 1.5rem;
    background: var(--color-primary-600);
    color: white;
    border: none;
    border-radius: var(--radius-sm);
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color var(--transition-fast);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    position: relative;
  }

  .password-submit:hover {
    background: var(--color-primary-800);
  }

  .password-submit:disabled {
    opacity: 0.7;
    cursor: not-allowed;
  }

  .password-submit.submitting {
    background: var(--color-primary-800);
  }

  .loading-spinner {
    animation: spin 1s linear infinite;
  }

  @keyframes spin {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .password-error {
    background: #fee;
    border: 1px solid #fcc;
    color: #c33;
    padding: 0.75rem;
    border-radius: var(--radius-sm);
    margin-bottom: 1rem;
    animation: slideIn var(--transition-normal);
  }

  .password-help {
    font-size: 0.875rem;
    color: var(--color-text-muted);
    margin-top: 0.5rem;
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<script>
  // Enhanced password protection UX
  document.addEventListener('DOMContentLoaded', () => {
    const passwordField = document.getElementById('case-study-password');
    const submitButton = document.getElementById('submit-password');
    const errorDiv = document.getElementById('password-error');
    const buttonText = submitButton?.querySelector('.button-text');
    const loadingSpinner = submitButton?.querySelector('.loading-spinner');

    if (submitButton && passwordField && errorDiv && buttonText && loadingSpinner) {
      const setLoading = (loading) => {
        submitButton.disabled = loading;
        submitButton.classList.toggle('submitting', loading);
        buttonText.style.display = loading ? 'none' : 'inline';
        loadingSpinner.style.display = loading ? 'inline' : 'none';
      };

      const showError = (message) => {
        errorDiv.textContent = message;
        errorDiv.style.display = 'block';
        passwordField.setAttribute('aria-invalid', 'true');
        passwordField.focus();
      };

      const hideError = () => {
        errorDiv.style.display = 'none';
        passwordField.removeAttribute('aria-invalid');
      };

      const validatePassword = (password) => {
        // Trim whitespace and check basic requirements
        const trimmedPassword = password.trim();

        if (!trimmedPassword) {
          showError('Please enter a password.');
          return false;
        }

        if (trimmedPassword.length < 4) {
          showError('Password must be at least 4 characters long.');
          return false;
        }

        return trimmedPassword;
      };

      const handleSubmit = async (e) => {
        e.preventDefault();

        const password = passwordField.value;
        const validPassword = validatePassword(password);

        if (!validPassword) return;

        // Clear any existing timeout
        if (window._passwordTimeout) {
          clearTimeout(window._passwordTimeout);
        }

        hideError();
        setLoading(true);

        // Simulate server validation with realistic delay
        setTimeout(() => {
          setLoading(false);

          // Always show error - this is intentionally fake for UX boundary
          showError('Incorrect password. Please try again or contact me to request access.');

          // Auto-hide error after 10 seconds for better UX
          window._passwordTimeout = setTimeout(() => {
            hideError();
          }, 10000);
        }, 1200);
      };

      // Event listeners
      submitButton.addEventListener('click', handleSubmit);

      passwordField.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
          e.preventDefault();
          handleSubmit(e);
        }
      });

      // Clear error when user starts typing
      passwordField.addEventListener('input', () => {
        if (errorDiv.style.display !== 'none') {
          hideError();
        }
      });

      // Focus management for accessibility
      passwordField.addEventListener('focus', () => {
        passwordField.removeAttribute('aria-invalid');
      });
    }
  });
</script>

<script>
  // Position card so divider aligns exactly with image bottom
  const positionHeroCard = () => {
    const card = document.querySelector('.case-hero__card') as HTMLElement;
    const details = document.querySelector('.case-hero__details') as HTMLElement;
    const imageWrapper = document.querySelector('.case-hero__image') as HTMLElement;
    
    if (!card || !details || !imageWrapper) return;
    
    // Get the height of the metadata section (from divider to card bottom)
    const detailsHeight = details.offsetHeight;
    const cardPaddingBottom = parseInt(getComputedStyle(card).paddingBottom) || 0;
    const metadataHeight = detailsHeight + cardPaddingBottom;
    
    // Position card so the divider (top of details) aligns with image bottom
    card.style.bottom = `-${metadataHeight}px`;
    
    // Update the hero margin to accommodate the card extension
    const hero = document.querySelector('.case-hero') as HTMLElement;
    if (hero) {
      // Smaller margin on mobile
      const isMobile = window.innerWidth < 768;
      const spacing = isMobile ? 24 : 32;
      hero.style.marginBottom = `${metadataHeight + spacing}px`;
    }
  };
  
  // Debounced resize handler
  let resizeTimeout: ReturnType<typeof setTimeout>;
  const handleResize = () => {
    clearTimeout(resizeTimeout);
    resizeTimeout = setTimeout(positionHeroCard, 100);
  };
  
  // Subtle parallax effect on hero image
  const initParallax = () => {
    const parallaxWrapper = document.querySelector('[data-parallax]') as HTMLElement;
    const parallaxImage = parallaxWrapper?.querySelector('img') as HTMLImageElement;
    if (!parallaxImage || !parallaxWrapper) return;
    
    // Check for reduced motion preference
    if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;
    
    let ticking = false;
    
    const updateParallax = () => {
      const scrolled = window.scrollY;
      const heroHeight = parallaxWrapper.offsetHeight || 500;
      
      // Only apply parallax while hero is in view
      if (scrolled < heroHeight * 1.5) {
        // Subtle movement: image moves at 30% of scroll speed
        const yPos = scrolled * 0.3;
        parallaxImage.style.transform = `translateY(${yPos}px)`;
      }
      
      ticking = false;
    };
    
    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(updateParallax);
        ticking = true;
      }
    }, { passive: true });
  };
  
  // Initialize on load and Astro transitions
  const initHero = () => {
    // Run positioning after a short delay to ensure fonts/layout are ready
    requestAnimationFrame(() => {
      positionHeroCard();
      initParallax();
    });
  };
  
  document.addEventListener('DOMContentLoaded', initHero);
  document.addEventListener('astro:page-load', initHero);
  
  // Reposition on resize with debounce
  window.addEventListener('resize', handleResize);
  
  // Reposition after fonts load (can affect text height)
  if (document.fonts) {
    document.fonts.ready.then(positionHeroCard);
  }
</script>