---
import Testimonial from './Testimonial.astro';
import type { Testimonial as TestimonialType } from '../types';

interface Props {
  testimonials: TestimonialType[];
  title?: string;
  id?: string;
}

const { testimonials, title = "Kind words from colleagues", id = "testimonials" } = Astro.props;
---

<section class="testimonials-section block outer" id={id}>
  <div class="inner">
    <div class="block-header">
      <h2 class="block-title line-top">{title}</h2>
    </div>
    <div class="block-content">
      <div class="testimonials-list">
        {testimonials.map(testimonial => (
          <Testimonial
            name={testimonial.name}
            title={testimonial.title}
            portrait={testimonial.portrait}
            quote={testimonial.quote}
          />
        ))}
      </div>
    </div>
  </div>
</section>
