---
// src/components/ConversationExchange.astro
interface Exchange {
  speaker: 'stakeholder' | 'me';
  avatar: string;
  label: string;
  message: string;
}

interface Props {
  title: string;
  intro: string;
  exchanges: Exchange[];
  outcome: string;
}

const { title, intro, exchanges, outcome } = Astro.props;
---

<div class="conversation-container">
  <div class="conversation-header">
    <h3>{title}</h3>
    <p class="conversation-intro">{intro}</p>
  </div>

  <div class="conversation-exchanges">
    {exchanges.map((exchange) => (
      <div class="exchange">
        <div class={`speaker-avatar ${exchange.speaker}`}>
          {exchange.avatar}
        </div>
        <div class="message-content">
          <div class="speaker-label">{exchange.label}</div>
          <div class="message-bubble">
            <p>{exchange.message}</p>
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="conversation-outcome">
    <p>{outcome}</p>
  </div>
</div>

<style>
  /* Conversation container */
  .conversation-container {
    max-width: 700px;
    margin: var(--space-2xl) auto;
    background: var(--color-surface);
    border-radius: var(--radius-none);
    padding: var(--space-xl);
  }

  .conversation-header {
    margin-bottom: 1.5rem;
    text-align: center;
  }

  .conversation-header h3 {
    font-family: "IBM Plex Serif", serif;
    font-size: var(--text-lg);
    color: var(--color-text);
    margin: 0 0 var(--space-xs) 0;
    line-height: 1.2;
  }

  .conversation-intro {
    color: var(--color-text-muted);
    font-size: var(--text-xs);
    line-height: 1.5;
    margin: 0;
  }

  /* Exchange styles */
  .conversation-exchanges {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin: 1.5rem 0;
  }

  .exchange {
    display: flex;
    gap: 0.75rem;
    align-items: flex-end;
    max-width: 85%;
  }

  /* Stakeholder messages align left */
  .exchange:has(.stakeholder) {
    align-self: flex-start;
  }

  /* My messages align right */
  .exchange:has(.me) {
    align-self: flex-end;
    flex-direction: row-reverse;
  }

  /* Speaker avatars */
  .speaker-avatar {
    flex-shrink: 0;
    width: 32px;
    height: 32px;
    border-radius: var(--radius-full);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 0.7rem;
    font-family: "Funnel Sans", sans-serif;
  }

  .speaker-avatar.stakeholder {
    background: var(--color-primary-600);
    color: white;
  }

  .speaker-avatar.me {
    background: var(--color-accent);
    color: white;
  }

  /* Message bubbles */
  .message-content {
    flex: 1;
    position: relative;
  }

  .speaker-label {
    font-size: 0.65rem;
    font-weight: 600;
    color: var(--color-text-muted);
    margin-bottom: 0.25rem;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    font-family: "Funnel Sans", sans-serif;
  }

  .exchange:has(.me) .speaker-label {
    text-align: right;
  }

  /* Chat bubble styling */
  .message-bubble {
    background: var(--color-bg);
    border-radius: 18px;
    padding: 0.75rem 1rem;
    position: relative;
    box-shadow: 0 1px 2px rgba(0, 0, 0, 0.08);
  }

  /* Stakeholder bubble - rounded except bottom-left */
  .exchange:has(.stakeholder) .message-bubble {
    border-bottom-left-radius: 4px;
    background: var(--color-bg);
  }

  /* My bubble - rounded except bottom-right, accent color */
  .exchange:has(.me) .message-bubble {
    border-bottom-right-radius: 4px;
    background: var(--color-accent);
    color: white;
  }

  .message-bubble p {
    margin: 0;
    font-size: var(--text-sm);
    line-height: 1.5;
    color: inherit;
  }

  .exchange:has(.stakeholder) .message-bubble p {
    color: var(--color-text);
  }

  .exchange:has(.me) .message-bubble p {
    color: white;
  }

  /* Dark mode adjustments */
  :global([data-theme="dark"]) .conversation-container {
    background: var(--color-surface);
  }

  :global([data-theme="dark"]) .message-bubble {
    background: var(--color-bg);
  }

  :global([data-theme="dark"]) .exchange:has(.me) .message-bubble {
    background: var(--color-accent);
  }

  /* Outcome section */
  .conversation-outcome {
    background: color-mix(in srgb, var(--color-accent) 8%, transparent);
    border-radius: var(--radius-none);
    padding: 1rem 1.25rem;
    margin-top: 1.5rem;
    text-align: center;
    border-left: 3px solid var(--color-accent);
  }

  .conversation-outcome p {
    margin: 0;
    font-size: var(--text-sm);
    color: var(--color-text);
    font-weight: 500;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .conversation-container {
      padding: 1.25rem;
      margin: 1.5rem auto;
    }

    .conversation-header h3 {
      font-size: var(--text-base);
    }

    .exchange {
      max-width: 90%;
    }

    .speaker-avatar {
      width: 28px;
      height: 28px;
      font-size: 0.6rem;
    }

    .message-bubble {
      padding: 0.625rem 0.875rem;
      border-radius: 16px;
    }

    .exchange:has(.stakeholder) .message-bubble {
      border-bottom-left-radius: 4px;
    }

    .exchange:has(.me) .message-bubble {
      border-bottom-right-radius: 4px;
    }

    .conversation-outcome {
      padding: 0.875rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .conversation-container {
      padding: 1rem;
      margin: 1rem auto;
    }

    .exchange {
      gap: 0.5rem;
      max-width: 92%;
    }

    .speaker-avatar {
      width: 24px;
      height: 24px;
      font-size: 0.55rem;
    }

    .speaker-label {
      font-size: 0.6rem;
    }

    .message-bubble {
      padding: 0.5rem 0.75rem;
      border-radius: 14px;
    }

    .message-bubble p {
      font-size: var(--text-xs);
    }
  }
</style>