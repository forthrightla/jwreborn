---
// src/components/ConversationExchange.astro
interface Exchange {
  speaker: 'stakeholder' | 'me';
  avatar: string;
  label: string;
  message: string;
}

interface Props {
  title: string;
  intro: string;
  exchanges: Exchange[];
  outcome: string;
}

const { title, intro, exchanges, outcome } = Astro.props;
---

<div class="conversation-container">
  <div class="conversation-header">
    <h3>{title}</h3>
    <p class="conversation-intro">{intro}</p>
  </div>

  <div class="conversation-exchanges">
    {exchanges.map((exchange) => (
      <div class="exchange">
        <div class={`speaker-avatar ${exchange.speaker}`}>
          {exchange.avatar}
        </div>
        <div class="message-content">
          <div class="speaker-label">{exchange.label}</div>
          <div class="message-bubble">
            <p>{exchange.message}</p>
          </div>
        </div>
      </div>
    ))}
  </div>

  <div class="conversation-outcome">
    <p>{outcome}</p>
  </div>
</div>

<style>
  /* Conversation container */
  .conversation-container {
    max-width: 960px;
    margin: 3rem auto;
    background: transparent;
    border-radius: 16px;
    padding: 2.5rem;
    box-shadow: var(--shadow-sm);
    border: 1px solid var(--color-border);
  }

  .conversation-header {
    margin-bottom: 2rem;
  }

  .conversation-header h3 {
    font-family: "IBM Plex Serif", serif;
    font-size: 2rem;
    color: var(--color-text);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  .conversation-intro {
    color: var(--color-text-muted);
    font-size: 1.1rem;
    line-height: 1.6;
    margin: 0;
  }

  /* Exchange styles */
  .conversation-exchanges {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .exchange {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  /* Speaker avatars */
  .speaker-avatar {
    flex-shrink: 0;
    width: 48px;
    height: 48px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
    font-size: 0.875rem;
    font-family: "Funnel Sans", sans-serif;
  }

  .speaker-avatar.stakeholder {
    background: linear-gradient(to right, var(--color-primary-800), var(--color-primary-600));
    color: white;
  }

  .speaker-avatar.me {
    background: var(--color-accent);
    color: white;
  }

  /* Message bubbles */
  .message-content {
    flex: 1;
    position: relative;
  }

  .speaker-label {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--color-text-muted);
    margin-bottom: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-family: "Funnel Sans", sans-serif;
  }

  :global([data-theme="dark"]) .speaker-label {
    color: color-mix(in srgb, var(--color-text) 85%, transparent);
  }

  .message-bubble {
    background: transparent;
    border-radius: 12px;
    padding: 1.25rem 1.5rem;
    position: relative;
    border: 1px solid var(--color-border);
  }

  .exchange:nth-child(even) .message-bubble {
    background: transparent;
    border: 2px solid var(--color-accent);
  }

  .message-bubble p {
    margin: 0;
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--color-text);
    position: relative;
    padding-left: 2rem;
  }

  /* Quote marks matching FeaturedQuote component */
  .message-bubble p::before {
    color: rgba(249, 59, 107, 0.3);
    content: "\201C";
    display: block;
    font-size: 3rem;
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-weight: bold;
    position: absolute;
    left: -0.5rem;
    top: -0.75rem;
    line-height: 1;
  }

  :global([data-theme="dark"]) .message-bubble p::before {
    color: color-mix(in srgb, var(--color-accent) 65%, transparent);
  }

  /* Outcome section */
  .conversation-outcome {
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    padding: 1.5rem;
    margin-top: 2rem;
    text-align: center;
  }

  .conversation-outcome p {
    margin: 0;
    font-size: 1.1rem;
    color: var(--color-text);
    font-weight: 500;
    font-family: "Funnel Sans", sans-serif;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .conversation-container {
      padding: 1.5rem;
      border-radius: 12px;
      margin: 2rem auto;
    }

    .conversation-header h3 {
      font-size: 1.6rem;
    }

    .exchange {
      gap: 1rem;
    }

    .speaker-avatar {
      width: 40px;
      height: 40px;
      font-size: 0.75rem;
    }

    .message-bubble {
      padding: 1rem 1.25rem;
    }

    .message-bubble p {
      font-size: 1rem;
      padding-left: 1.5rem;
    }

    .message-bubble p::before {
      font-size: 2.5rem;
      left: -0.25rem;
      top: -0.5rem;
    }

    .speaker-label {
      font-size: 0.75rem;
    }

    .conversation-outcome {
      padding: 1.25rem;
    }

    .conversation-outcome p {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .conversation-container {
      padding: 1.25rem;
      margin: 1.5rem auto;
    }

    .exchange {
      gap: 0.75rem;
    }

    .speaker-avatar {
      width: 36px;
      height: 36px;
    }

    .message-bubble {
      padding: 0.875rem 1rem;
    }

    .message-bubble p {
      padding-left: 1.25rem;
    }

    .message-bubble p::before {
      font-size: 2rem;
      left: -0.25rem;
      top: -0.25rem;
    }
  }
</style>