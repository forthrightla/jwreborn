---
export interface Step {
  text: string;
  subtext?: string;
  variant?: 'default' | 'problem' | 'solution' | 'threshold' | 'muted';
  zone?: string;
}

export interface Props {
  steps: Step[];
  className?: string;
}

const { steps, className = '' } = Astro.props;

// Determine which steps should show zone labels (only first in consecutive group)
const shouldShowZone = (index: number): boolean => {
  const currentZone = steps[index].zone;
  if (!currentZone) return false;
  if (index === 0) return true;
  return steps[index - 1].zone !== currentZone;
};

// Check if arrow should be muted (adjacent to muted step)
const isArrowMuted = (index: number): boolean => {
  const currentStep = steps[index];
  const nextStep = steps[index + 1];
  return currentStep?.variant === 'muted' || nextStep?.variant === 'muted';
};
---

<div class={`funnel-container ${className}`}>
  <div class="funnel">
    {steps.map((step, index) => (
      <>
        <div class="step-unit">
          {shouldShowZone(index) && (
            <span class="zone-label">{step.zone}</span>
          )}
          <div class={`funnel-step variant-${step.variant || 'default'}`}>
            <div class="step-content">
              <p class="step-text">{step.text}</p>
              {step.subtext && <span class="step-subtext">{step.subtext}</span>}
            </div>
          </div>
        </div>
        {index < steps.length - 1 && (
          <div class={`arrow ${isArrowMuted(index) ? 'arrow-muted' : ''}`}>
            <svg class="arrow-svg" viewBox="0 0 24 12" fill="none" xmlns="http://www.w3.org/2000/svg">
              <line x1="0" y1="6" x2="18" y2="6" stroke="currentColor" stroke-width="1.5"/>
              <path d="M14 1L19 6L14 11" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
            </svg>
          </div>
        )}
      </>
    ))}
  </div>
</div>

<style>
  /* Variant color tokens - using design system tokens */
  :root {
    --flow-problem-bg: var(--color-error-bg);
    --flow-problem-border: var(--color-error-dark);
    --flow-problem-text: var(--color-error-dark);
    --flow-solution-bg: var(--color-success-bg);
    --flow-solution-border: var(--color-success-dark);
    --flow-solution-text: var(--color-success-dark);
    --flow-threshold-bg: transparent;
    --flow-threshold-border: var(--color-text-muted);
  }

  :global([data-theme="dark"]) {
    --flow-problem-text: var(--color-error);
    --flow-solution-text: var(--color-success);
  }

  .funnel-container {
    max-width: 1200px;
    margin: 0 auto;
    width: 100%;
    box-sizing: border-box;
  }

  .funnel {
    display: flex;
    align-items: flex-end;
    justify-content: center;
    gap: 16px;
    margin-bottom: 60px;
    position: relative;
  }

  .step-unit {
    display: flex;
    flex-direction: column;
    align-items: stretch;
    flex: 1;
    max-width: 220px;
  }

  .zone-label {
    font-size: calc(var(--text-xs) * 0.785);  /* ~11px from 14px base */
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
    margin-bottom: var(--space-xs);
    display: block;
  }

  .funnel-step {
    background: color-mix(in srgb, var(--color-primary-600) 6%, var(--color-bg));
    padding: 24px 16px;
    border-radius: var(--radius-none);
    text-align: center;
    min-height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    box-shadow: var(--shadow-xs);
    border: 1px solid var(--color-border);
  }

  :global([data-theme="dark"]) .funnel-step {
    background: color-mix(in srgb, var(--color-surface) 85%, var(--color-primary-600) 15%);
  }

  /* Variant: default - no changes needed, base styles apply */

  /* Variant: problem */
  .funnel-step.variant-problem {
    background: var(--flow-problem-bg);
    border: 2px solid var(--flow-problem-border);
  }
  .funnel-step.variant-problem .step-text,
  .funnel-step.variant-problem .step-subtext {
    color: var(--flow-problem-text);
  }

  /* Variant: solution */
  .funnel-step.variant-solution {
    background: var(--flow-solution-bg);
    border: 2px solid var(--flow-solution-border);
  }
  .funnel-step.variant-solution .step-text,
  .funnel-step.variant-solution .step-subtext {
    color: var(--flow-solution-text);
  }

  /* Variant: threshold */
  .funnel-step.variant-threshold {
    background: var(--flow-threshold-bg);
    border: 2px dashed var(--flow-threshold-border);
    box-shadow: none;
  }

  /* Variant: muted */
  .funnel-step.variant-muted {
    opacity: 0.5;
  }

  .step-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .step-text {
    font-size: var(--text-xs);
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    margin: 0;
  }

  .step-subtext {
    font-size: calc(var(--text-xs) * 0.857);  /* ~12px from 14px base */
    font-weight: 400;
    opacity: 0.8;
    color: inherit;
    line-height: 1.3;
  }

  /* Arrow styles - minimal SVG design */
  .arrow {
    flex-shrink: 0;
    width: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    align-self: center;
    color: var(--color-text-muted);
  }

  .arrow-svg {
    width: 24px;
    height: 12px;
  }

  .arrow-muted {
    opacity: 0.4;
  }

  /* Tablet styles */
  @media (max-width: 968px) {
    .funnel {
      gap: 12px;
    }

    .step-unit {
      max-width: 180px;
    }

    .funnel-step {
      padding: 20px 12px;
    }

    .arrow {
      width: 24px;
    }

    .arrow-svg {
      width: 20px;
      height: 10px;
    }
  }

  /* Mobile styles */
  @media (max-width: 768px) {
    .funnel-container {
      width: 100%;
      overflow: hidden;
    }
    
    .funnel {
      flex-direction: column;
      gap: 0;
      align-items: stretch;
      margin-bottom: 2rem;
    }

    .step-unit {
      max-width: none;
      width: 100%;
    }

    .zone-label {
      margin-bottom: 6px;
      margin-top: 8px;
    }

    .funnel-step {
      min-height: auto;
      padding: 1.25rem 1rem;
    }

    .arrow {
      width: 100%;
      height: 40px;
      padding: 8px 0;
      color: var(--color-primary-600);
    }
    
    .arrow-svg {
      width: 28px;
      height: 40px;
      transform: rotate(90deg);
    }
  }

  /* Small mobile styles */
  @media (max-width: 480px) {
    .step-text {
      font-size: var(--text-sm);
    }

    .funnel-step {
      padding: 1rem;
    }
    
    .arrow {
      height: 36px;
    }

    .arrow-svg {
      width: 24px;
      height: 36px;
    }
  }

  /* Animation for page load */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .step-unit {
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .step-unit:nth-child(1) { animation-delay: 0.1s; }
  .step-unit:nth-child(3) { animation-delay: 0.3s; }
  .step-unit:nth-child(5) { animation-delay: 0.5s; }
  .step-unit:nth-child(7) { animation-delay: 0.7s; }
  .step-unit:nth-child(9) { animation-delay: 0.9s; }

  .arrow {
    animation: fadeInUp 0.6s ease-out backwards;
  }

  .arrow:nth-child(2) { animation-delay: 0.2s; }
  .arrow:nth-child(4) { animation-delay: 0.4s; }
  .arrow:nth-child(6) { animation-delay: 0.6s; }
  .arrow:nth-child(8) { animation-delay: 0.8s; }
</style>