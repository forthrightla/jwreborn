---
// src/components/FeaturedQuote.astro
interface Props {
  quote: string;
  authorName: string;
  authorTitle: string;
  authorImage: string;
}

const { quote, authorName, authorTitle, authorImage } = Astro.props;
---

<section class="featured-quote-block outer">
  <div class="inner">
    <div class="quote-container">
      <blockquote class="featured-quote">
        <p class="quote-text">
          {quote}
        </p>
        <footer class="quote-attribution">
          <img 
            src={authorImage} 
            alt={authorName} 
            class="quote-avatar"
          />
          <div class="quote-author">
            <cite class="author-name">{authorName}</cite>
            <span class="author-title">{authorTitle}</span>
          </div>
        </footer>
      </blockquote>
    </div>
  </div>
</section>

<style>
/* Featured Quote Block Styles */
.featured-quote-block {
  background: transparent;
  padding: 4rem 0 2rem;
  position: relative;
  margin-top: 1.5rem;
  margin-bottom: 1.5rem;
  margin-left: 0;
  margin-right: 0;
  width: 100%;
}

/* Light mode: full-width soft band behind the card */
:global(html:not([data-theme="dark"])) .featured-quote-block {
  background: #f7f8fa;
}

.quote-container {
  margin: 0 auto;
  position: relative;
  max-width:960px;
}

.quote-mark {
  display: none; /* Remove the standalone quote mark */
}

.featured-quote {
  background: transparent;
  padding: 2.5rem;
  box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
  position: relative;
  z-index: 1;
  border: 1px solid var(--color-border);
}

/* Light mode: keep the card itself white */
:global(html:not([data-theme="dark"])) .featured-quote {
  background: #ffffff;
}

/* Dark mode: full-width neutral band and surface card */
:global([data-theme="dark"]) .featured-quote-block {
  background: linear-gradient(135deg, var(--color-surface) 0%, var(--color-surface-alt) 100%);
}

:global([data-theme="dark"]) .featured-quote {
  background: var(--color-surface);
}

.quote-text {
  font-size: 1.2rem;
  line-height: 1.7;
  color: var(--color-text-muted);
  margin: 0 0 1.5rem 0;
  font-family: "IBM Plex Serif", Georgia, serif;
  position: relative;
  font-style:italic;
  padding-top: 2.5rem;
}

/* Testimonial-style quote mark */
.quote-text::before {
  color: #f93b6b;
  content: "\201C";
  display: block;
  font-size: 4.333rem;
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: bold;
  left: 0;
  line-height: 1.3rem;
  position: absolute;
  font-style: normal;
  top: 0;
}

/* Add accent bar */
.quote-text::after {
  content: '';
  position: absolute;
  left: -2.5rem;
  top: 2.7rem;
  height: calc(100% - 2.7rem);
  width: 3px;
  background: var(--color-accent);
  border-radius: 1.5px;
}

.quote-attribution {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.quote-avatar {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  object-fit: cover;
  flex-shrink: 0;
  margin-bottom:0;
}

.quote-author {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 0.2rem;
}

.author-name {
  font-size: 0.9375rem;
  font-weight: 600;
  color: var(--color-text);
  font-style: normal;
  font-family: "Funnel Sans", -apple-system, BlinkMacSystemFont, sans-serif;
  line-height: 1.3;
}

.author-title {
  font-size: 0.875rem;
  color: var(--color-text-muted);
  font-family: "Funnel Sans", -apple-system, BlinkMacSystemFont, sans-serif;
  line-height: 1.3;
}

/* Responsive styles */
@media (max-width: 768px) {
  .featured-quote-block {
    padding: 3rem 0;
  }

  .quote-mark {
    font-size: 5rem;
    top: -8px;
    left: -25px;
  }

  .featured-quote {
    padding: 2rem;
    border-radius: 12px;
  }

  .quote-text {
    font-size: 1.0625rem;
    margin-bottom: 1.25rem;
    padding-top: 2rem;
  }

  .quote-text::before {
    font-size: 2.5rem;
  }

  .quote-text::after {
    left: -2rem;
    top: 2.2rem;
    height: calc(100% - 2.2rem);
  }

  .quote-avatar {
    width: 44px;
    height: 44px;
  }

  .author-name {
    font-size: 0.9375rem;
  }

  .author-title {
    font-size: 0.8125rem;
  }
}

@media (min-width: 769px) {
  .featured-quote-block {
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
}

@media (max-width: 768px) {
  .featured-quote-block {
    margin-left: -4vw; /* Match the page padding */
    margin-right: -4vw;
    width: calc(100% + 8vw);
  }
}

@media (max-width: 480px) {
  .featured-quote-block {
    padding: 2.5rem 0;
  }

  .featured-quote {
    padding: 1.75rem;
  }

  .quote-text {
    font-size: 1rem;
  }

  .quote-mark {
    font-size: 4.5rem;
    top: -10px;
    left: -15px;
    opacity: 0.2;
  }

  .quote-text::after {
    display: none;
  }
}

/* Subtle animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.featured-quote {
  animation: fadeIn 0.6s ease-out;
}
</style>