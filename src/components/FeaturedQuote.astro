---
// src/components/FeaturedQuote.astro
interface Props {
  quote: string;
  authorName: string;
  authorTitle: string;
  authorImage: string;
}

const { quote, authorName, authorTitle, authorImage } = Astro.props;
---

<section class="featured-quote-block outer">
  <div class="inner">
    <div class="quote-container">
      <blockquote class="featured-quote">
        <p class="quote-text">
          {quote}
        </p>
        <footer class="quote-attribution">
          <img 
            src={authorImage} 
            alt={`Portrait of ${authorName}`} 
            class="quote-avatar"
          />
          <div class="quote-author">
            <cite class="author-name">{authorName}</cite>
            <span class="author-title">{authorTitle}</span>
          </div>
        </footer>
      </blockquote>
    </div>
  </div>
</section>

<style>
/* Featured Quote Block Styles */
.featured-quote-block {
  background: transparent;
  padding: var(--space-3xl) 0 var(--space-xl);
  position: relative;
  margin-top: var(--space-lg);
  margin-bottom: var(--space-lg);
  margin-left: 0;
  margin-right: 0;
  width: 100%;
}

/* Light mode: full-width soft band behind the card */
:global(html:not([data-theme="dark"])) .featured-quote-block {
  background: var(--color-surface-alt);
}

.quote-container {
  margin: 0 auto;
  position: relative;
  max-width:960px;
}

.quote-mark {
  display: none; /* Remove the standalone quote mark */
}

.featured-quote {
  background: transparent;
  padding: var(--space-xl);
  box-shadow: var(--shadow-xs);
  position: relative;
  z-index: 1;
  border: none;
  border-radius: var(--radius-none);
}

/* Light mode: keep the card itself white */
:global(html:not([data-theme="dark"])) .featured-quote {
  background: var(--color-bg);
}

/* Dark mode: full-width neutral band and surface card */
:global([data-theme="dark"]) .featured-quote-block {
  background: var(--gradient-surface);
}

:global([data-theme="dark"]) .featured-quote {
  background: var(--color-surface);
}

.quote-text {
  font-size: var(--text-sm);
  line-height: 1.7;
  color: var(--color-text-muted);
  margin: 0 0 var(--space-lg) 0;
  font-family: "IBM Plex Serif", Georgia, serif;
  position: relative;
  font-style:italic;
  padding-top: var(--space-xl);
}

/* Testimonial-style quote mark with entrance animation */
.quote-text::before {
  color: var(--color-accent);
  content: "\201C";
  display: block;
  font-size: 4.333rem;
  font-family: Georgia, 'Times New Roman', Times, serif;
  font-weight: bold;
  left: 0;
  line-height: 1.3rem;
  position: absolute;
  font-style: normal;
  top: 0;
  animation: quoteEntrance 0.5s ease-out 0.2s both;
}

/* Add accent bar */
.quote-text::after {
  content: '';
  position: absolute;
  left: calc(var(--space-xl) * -1);
  top: 2.7rem;
  height: calc(100% - 2.7rem);
  width: 3px;
  background: var(--color-accent);
  border-radius: 1.5px;
}

.quote-attribution {
  display: flex;
  align-items: center;
  gap: 1rem;
}

.quote-avatar {
  width: 60px;
  height: 60px;
  border-radius: var(--radius-full);
  object-fit: cover;
  flex-shrink: 0;
  margin-bottom:0;
}

.quote-author {
  display: flex;
  flex-direction: column;
  justify-content: center;
  gap: 0.2rem;
  font-size: var(--text-sm);
}

.author-name {
  font-size: inherit;
  font-weight: 700;
  color: var(--color-text);
  font-style: normal;
  font-family: "Funnel Sans", -apple-system, BlinkMacSystemFont, sans-serif;
  line-height: 1.3;
  margin-bottom: var(--space-2xs);
}

.author-title {
  font-size: 0.9em;
  font-weight: 500;
  opacity: 0.8;
  color: var(--color-text);
  font-family: "Funnel Sans", -apple-system, BlinkMacSystemFont, sans-serif;
  line-height: 1.3;
}

/* Responsive styles */
@media (max-width: 768px) {
  .featured-quote-block {
    padding: 3rem 0;
  }

  .quote-mark {
    font-size: 5rem;
    top: -8px;
    left: -25px;
  }

  .featured-quote {
    padding: var(--space-xl);
    border-radius: var(--radius-none);
  }

  .quote-text {
    font-size: var(--text-sm);
    margin-bottom: var(--space-lg);
    padding-top: var(--space-xl);
  }

  .quote-text::before {
    font-size: 2.5rem;
  }

  .quote-text::after {
    left: -2rem;
    top: 2.2rem;
    height: calc(100% - 2.2rem);
  }

  .quote-avatar {
    width: 44px;
    height: 44px;
  }

  .author-name {
    font-size: inherit;
  }

  .author-title {
    font-size: 0.9em;
  }
}

@media (min-width: 769px) {
  .featured-quote-block {
    margin-left: calc(-50vw + 50%);
    margin-right: calc(-50vw + 50%);
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
  }
}

@media (max-width: 768px) {
  .featured-quote-block {
    margin-left: -4vw; /* Match the page padding */
    margin-right: -4vw;
    width: calc(100% + 8vw);
  }
}

@media (max-width: 480px) {
  .featured-quote-block {
    padding: 2.5rem 0;
  }

  .featured-quote {
    padding: 1.75rem;
  }

  .quote-text {
    font-size: var(--text-sm);
  }

  .quote-mark {
    font-size: 4.5rem;
    top: -10px;
    left: -15px;
    opacity: 0.2;
  }

  .quote-text::after {
    display: none;
  }
}

/* Subtle animation */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.featured-quote {
  animation: fadeIn 0.6s ease-out;
}
</style>