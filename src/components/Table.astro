---
interface Props {
  headers: string[];
  data: (string | number)[][];
  variant?: 'default' | 'compact' | 'striped';
}

const { headers, data, variant = 'default' } = Astro.props;
---

<div class={`table-wrapper ${variant}`}>
  <table class="modern-table">
    <thead>
      <tr>
        {headers.map(header => (
          <th>{header}</th>
        ))}
      </tr>
    </thead>
    <tbody>
      {data.map((row, index) => (
        <tr>
          {row.map((cell, cellIndex) => (
            <td class={cellIndex === 0 ? 'first-col' : ''}>{cell}</td>
          ))}
        </tr>
      ))}
    </tbody>
  </table>
</div>

<style>
  .table-wrapper {
    margin: 2rem 0;
    overflow-x: auto;
    border-radius: 16px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
  }

  .modern-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    background: white;
    font-size: 0.95rem;
  }

  /* Header styles */
  .modern-table thead tr {
    background: linear-gradient(135deg, #00296b 0%, #00509d 100%);
  }

  .modern-table thead th {
    padding: 1.25rem 1.5rem;
    text-align: left;
    font-weight: 600;
    color: white;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    position: relative;
  }

  .modern-table thead th:first-child {
    border-top-left-radius: 16px;
  }

  .modern-table thead th:last-child {
    border-top-right-radius: 16px;
  }

  /* Add subtle separator between header columns */
  .modern-table thead th:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 25%;
    height: 50%;
    width: 1px;
    background: rgba(255, 255, 255, 0.2);
  }

  /* Body styles */
  .modern-table tbody tr {
    border-bottom: 1px solid #f0f0f0;
    transition: all 0.3s ease;
  }

  .modern-table tbody tr:hover {
    background-color: #f9f9fb;
    transform: scale(1.01);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.04);
  }

  .modern-table tbody tr:last-child {
    border-bottom: none;
  }

  .modern-table tbody tr:last-child td:first-child {
    border-bottom-left-radius: 16px;
  }

  .modern-table tbody tr:last-child td:last-child {
    border-bottom-right-radius: 16px;
  }

  .modern-table tbody td {
    padding: 1.25rem 1.5rem;
    color: #49535a;
    line-height: 1.5;
  }

  /* First column emphasis */
  .modern-table tbody td.first-col {
    font-weight: 600;
    color: #00296b;
    position: relative;
  }

  /* Add accent bar to first column on hover */
  .modern-table tbody tr:hover td.first-col::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 3px;
    background: #f93b6b;
  }

  /* Compact variant */
  .table-wrapper.compact .modern-table thead th,
  .table-wrapper.compact .modern-table tbody td {
    padding: 0.875rem 1.25rem;
  }

  /* Striped variant */
  .table-wrapper.striped .modern-table tbody tr:nth-child(even) {
    background-color: #f9f9fb;
  }

  /* Responsive behavior */
  @media (max-width: 768px) {
    .table-wrapper {
      border-radius: 12px;
      margin: 1.5rem -1rem;
    }

    .modern-table {
      font-size: 0.875rem;
    }

    .modern-table thead th,
    .modern-table tbody td {
      padding: 1rem 0.75rem;
    }

    .modern-table thead th {
      font-size: 0.8rem;
    }

    /* Make first column sticky on mobile for better context */
    .modern-table tbody td.first-col {
      position: sticky;
      left: 0;
      background: white;
      z-index: 1;
      box-shadow: 2px 0 4px rgba(0, 0, 0, 0.04);
    }

    .modern-table tbody tr:hover td.first-col {
      background-color: #f9f9fb;
    }
  }

  /* Special styling for numeric data */
  .modern-table tbody td:last-child {
    font-weight: 500;
  }

  /* Add visual interest with gradient text for important cells */
  .modern-table tbody tr:hover td:not(.first-col) {
    background: linear-gradient(135deg, #49535a 0%, #272c30 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }
</style>