---
import type { CardProps } from "../types";
import ClientLogo from "./ClientLogo.astro";

const {
  href,
  title,
  img,
  isPasswordProtected = false,
  tags = [],
  highlight,
  subtitle,
  client,
  extraImage,
  extraImageAlt,
  extraImageHeight,
  extraImageWidth,
  extraImageFullWidth = false,
  hideThumbnail = false,
} = Astro.props as CardProps;

// Use highlight if provided, otherwise fallback to subtitle or title
const displayHighlight = highlight || subtitle || title;
---

<article class="case-card project">
  <div class="case-card__pattern"></div>
  <a
    href={href}
    class="case-card__link"
    aria-label={`${title}${isPasswordProtected ? " (password protected)" : ""}`}
  >
    <div class="case-card__content">
      <div class="case-card__meta">
        {
          (client || tags.length > 0) && (
            <div class="case-card__client">
              {client ? (
                <>
                  <ClientLogo client={client} />
                  {![
                    "Indeed",
                    "LegalZoom",
                    "AXS",
                    "Cerebral",
                    "Make:",
                    "O'Reilly Auto Parts",
                    "USA Jump Rope",
                  ].includes(client) && client}
                </>
              ) : (
                tags[0]
              )}
            </div>
          )
        }
        {
          isPasswordProtected && (
            <span class="case-card__lock">
              <img src="/images/icon-lock.svg" alt="" aria-hidden="true" />
              Password required
            </span>
          )
        }
      </div>
      <h3 class="case-card__title">{displayHighlight}</h3>
      <span class="case-card__cta">
        View case study <span aria-hidden="true">â†’</span>
      </span>
    </div>
    {
      !hideThumbnail && (
        <div class="case-card__media">
          <img src={img} alt={`${title} preview`} loading="lazy" />
        </div>
      )
    }
    {
      extraImage && (
        <div
          class={`case-card__extra ${extraImageFullWidth ? "full-width" : ""}`}
        >
          <img
            src={extraImage}
            alt={extraImageAlt || ""}
            style={
              [
                extraImageHeight ? `height:${extraImageHeight}` : "",
                extraImageWidth ? `max-width:${extraImageWidth}` : "",
              ]
                .filter(Boolean)
                .join(";") || undefined
            }
          />
        </div>
      )
    }
  </a>
</article>

<style>
  .case-card {
    background: linear-gradient(to bottom right, #ffffff, #f5f0ff);
    border: 1px solid rgba(0, 0, 0, 0.08);
    border-radius: 18px;
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease,
      border-color 0.3s ease;
    height: 100%;
    overflow: hidden;
    position: relative;
  }

  .case-card__pattern {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    background-image: radial-gradient(circle, #000000 1px, transparent 1px);
    background-size: 24px 24px;
    pointer-events: none;
    z-index: 0;
    border-radius: 32px;
  }

  .case-card__media,
  .case-card__extra {
    position: relative;
    z-index: 1;
  }

  .case-card__link {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 0;
    padding: 0;
    text-decoration: none;
    height: 100%;
    color: inherit;
    border-bottom: none;
    position: relative;
    z-index: 1;
  }

  .case-card__content {
    display: flex;
    flex-direction: column;
    gap: var(--space-base);
    padding: var(--space-base) var(--space-base) 0;
    position: relative;
    z-index: 1;
  }

  /* Dark mode styles */
  html[data-theme="dark"] .case-card {
    background: var(--color-surface);
    border-color: rgba(255, 255, 255, 0.08);
    box-shadow: var(--shadow-sm);
  }

  html[data-theme="dark"] .case-card__pattern {
    opacity: 0.05;
    background-image: radial-gradient(circle, #ffffff 1px, transparent 1px);
  }

  html[data-theme="dark"] .case-card:hover,
  html[data-theme="dark"] .case-card:focus-within {
    border-color: rgba(255, 255, 255, 0.15);
    box-shadow: var(--shadow-lg);
  }

  html[data-theme="dark"] .case-card__title {
    color: var(--color-text);
  }

  html[data-theme="dark"] .case-card__client {
    color: var(--color-primary-100);
  }

  html[data-theme="dark"] .case-card__media {
    background: rgba(255, 255, 255, 0.03);
  }

  .case-card__meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    font-size: 0.95rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text-muted);
  }

  .case-card__client {
    color: var(--color-primary-800);
    height: 1.7rem;
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

  .case-card__lock {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.8rem;
    color: var(--color-accent);
  }

  .case-card__lock img {
    width: 14px;
    height: 14px;
  }

  .case-card__title {
    font-size: var(--text-lg);
    line-height: 1.3;
    color: var(--color-text);
    margin: 0;
  }

  .case-card__cta {
    font-weight: 600;
    color: var(--color-accent);
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 1rem;
  }

  .case-card__media {
    margin: 0;
    overflow: hidden;
    background: var(--color-surface-alt);
  }
  .case-card__extra {
    display: flex;
    justify-content: center;
    margin: var(--space-sm) var(--space-xs) 0;
    padding: 0;
    border-top: none;
  }

  .case-card__extra.full-width {
    margin-top: 0.75rem;
    margin-left: -1rem;
    margin-right: -1rem;
    margin-bottom: 0;
    width: calc(100% + 2rem);
  }

  .case-card__extra img {
    width: 100%;
    height: auto;
    object-fit: contain;
    border: none;
    border-radius: 0;
    box-shadow: none;
    display: block;
    transition: transform 0.5s ease;
  }

  .case-card:hover .case-card__extra img {
    transform: scale(1.02);
  }

  .case-card__media img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  @media (max-width: 720px) {
    .case-card__link {
      padding: 0;
    }

    .case-card__content {
      padding: var(--space-xl) var(--space-xl) 0;
    }

    .case-card__media {
      margin: 0 var(--space-xl);
      border-radius: 20px 20px 28px 28px;
    }

    .case-card__extra {
      display: none;
    }
  }
</style>
