---
import type { CardProps } from "../types";

const {
  href,
  title,
  img,
  isPasswordProtected = false,
  tags = [],
  highlight,
  subtitle,
  client,
  extraImage,
  extraImageAlt,
  extraImageHeight,
  extraImageWidth,
  extraImageFullWidth = false,
  hideThumbnail = false,
} = Astro.props as CardProps;

// Use highlight if provided, otherwise fallback to subtitle or title
const displayHighlight = highlight || subtitle || title;
---

<article class="case-card project">
  <a
    href={href}
    class="case-card__link"
    aria-label={`${title}${isPasswordProtected ? " (password protected)" : ""}`}
  >
    <div class="case-card__content">
      <div class="case-card__meta">
        {
          (client || tags.length > 0) && (
            <span class="case-card__client">{client || tags[0]}</span>
          )
        }
        {
          isPasswordProtected && (
            <span class="case-card__lock">
              <img src="/images/icon-lock.svg" alt="" aria-hidden="true" />
              Password required
            </span>
          )
        }
      </div>
      <h3 class="case-card__title">{displayHighlight}</h3>
      <span class="case-card__cta">
        View case study <span aria-hidden="true">â†’</span>
      </span>
    </div>
    {
      !hideThumbnail && (
        <div class="case-card__media">
          <img src={img} alt={`${title} preview`} loading="lazy" />
        </div>
      )
    }
    {
      extraImage && (
        <div
          class={`case-card__extra ${extraImageFullWidth ? "full-width" : ""}`}
        >
          <img
            src={extraImage}
            alt={extraImageAlt || ""}
            style={
              [
                extraImageHeight ? `height:${extraImageHeight}` : "",
                extraImageWidth ? `max-width:${extraImageWidth}` : "",
              ]
                .filter(Boolean)
                .join(";") || undefined
            }
          />
        </div>
      )
    }
  </a>
</article>

<style>
  .case-card {
    background: var(--card-bg, #fff);
    border-radius: 32px;
    box-shadow: 0 20px 60px rgba(12, 18, 38, 0.08);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
    height: 100%;
    overflow: hidden;
  }

  .case-card__link {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    gap: 0;
    padding: 0;
    text-decoration: none;
    height: 100%;
    color: inherit;
    border-bottom: none;
  }

  .case-card:hover,
  .case-card:focus-within {
    transform: translateY(-4px);
    box-shadow: 0 30px 80px rgba(12, 18, 38, 0.12);
  }

  .case-card__content {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 1rem 1rem 0;
  }

  /* Dark mode styles */
  html[data-theme="dark"] .case-card {
    background: var(--color-surface, #161b22);
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
  }

  html[data-theme="dark"] .case-card:hover,
  html[data-theme="dark"] .case-card:focus-within {
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.5);
  }

  html[data-theme="dark"] .case-card__title {
    color: var(--color-text, #e6edf3);
  }

  html[data-theme="dark"] .case-card__client {
    color: #6ea8fe;
  }

  html[data-theme="dark"] .case-card__media {
    background: rgba(255, 255, 255, 0.03);
  }

  .case-card__meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    font-size: 0.95rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: #6a6f85;
  }

  .case-card__client {
    color: #001a72;
  }

  .case-card__lock {
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    font-size: 0.8rem;
    color: #a02a2a;
  }

  .case-card__lock img {
    width: 14px;
    height: 14px;
  }

  .case-card__title {
    font-size: clamp(1.2rem, 2vw, 2rem);
    line-height: 1.3;
    color: #0a0f1c;
    margin: 0;
  }

  .case-card__cta {
    font-weight: 600;
    color: #ff1f74;
    display: inline-flex;
    align-items: center;
    gap: 0.4rem;
    font-size: 1rem;
  }

  .case-card__media {
    margin: 0;
    overflow: hidden;
    background: #f5f6fb;
  }
  .case-card__extra {
    display: flex;
    justify-content: center;
    margin: 0.75rem 0.5rem 0;
    padding: 0;
    border-top: none;
  }

  .case-card__extra.full-width {
    margin-top: 0.75rem;
    margin-left: -1rem;
    margin-right: -1rem;
    margin-bottom: 0;
    width: calc(100% + 2rem);
  }

  .case-card__extra img {
    width: 100%;
    height: auto;
    object-fit: contain;
    border: none;
    border-radius: 0;
    box-shadow: none;
    display: block;
  }

  .case-card__media img {
    width: 100%;
    height: 100%;
    display: block;
    object-fit: cover;
  }

  @media (max-width: 720px) {
    .case-card__link {
      padding: 0;
    }

    .case-card__content {
      padding: 2rem 2rem 0;
    }

    .case-card__media {
      margin: 0 -2rem;
      border-radius: 20px 20px 28px 28px;
    }

    .case-card__extra {
      margin: 1.5rem -2rem -2rem;
    }

    .case-card__extra.full-width {
      margin: 1.5rem 0 0;
      width: 100%;
    }
  }
</style>
