---
interface Props {
	title: string;
	href: string;
	img: string;
}

const { href, title, img } = Astro.props;
---


<article class="post project">
	<a href={href} class="post-link">
		<div class="post-thumbnail">
			<img
				class="thumbnail"
				src={img}
				alt={title}
			/>
		</div>
		<header class="post-header">
			<h3 class="post-title">
				{title}
			</h3>
		</header>
	</a>
</article>
