---
import type { CardProps } from "../types";

interface SimplifiedCardProps extends CardProps {
  highlight?: string;
}

const { href, title, img } = Astro.props as SimplifiedCardProps;
const displayTitle = title;
---

<article class="project simplified">
    <div class="case-card">
        <a href={href} class="case-card__link" aria-label={title}>
            <div class="case-card__media">
                <img src={img} alt={`Case study preview for ${title}`} loading="lazy" />
            </div>
            <div class="case-card__content">
                <h3 class="case-card__title">{displayTitle}</h3>
                <span class="case-card__cta">
                    View case study <span aria-hidden="true">â†’</span>
                </span>
            </div>
        </a>
    </div>
</article>

<style>
    .case-card {
        background: var(--color-bg);
        border-radius: var(--radius-lg);
        border: var(--border-default);
        transition: transform var(--transition-normal), box-shadow var(--transition-normal);
        height: 100%;
        overflow: hidden;
    }

    .case-card__link {
        display: flex;
        flex-direction: column;
        gap: 0;
        text-decoration: none;
        height: 100%;
        color: inherit;
        border-bottom: none;
    }

    .case-card:hover,
    .case-card:focus-within {
        transform: translateY(var(--hover-lift));
        box-shadow: var(--shadow-lg);
    }

    .case-card__content {
        padding: var(--space-lg) var(--space-lg);
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .case-card__title {
        font-size: var(--text-base);
        line-height: 1.3;
        color: var(--color-text);
        margin: 0;
        font-weight: 700;
    }

    .case-card__cta {
        font-weight: 600;
        display: inline-flex;
        align-items: center;
        gap: 0.4rem;
        font-size: 0.95rem;
        color: var(--color-accent);
        margin-top: 0.5rem;
    }

    .case-card__cta span {
        transition: transform var(--transition-normal);
        display: inline-block;
    }

    .case-card:hover .case-card__cta span,
    .case-card:focus-within .case-card__cta span {
        animation: bounceRight 0.6s ease infinite;
    }

    .case-card__media {
        margin: 0;
        overflow: hidden;
        background: var(--color-surface-alt);
        aspect-ratio: 2.2/1;
    }

    .case-card__media img {
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        transition: transform var(--transition-slow);
    }

    .case-card:hover .case-card__media img {
        transform: scale(1.05);
    }

    /* Dark mode styles */
    html[data-theme="dark"] .case-card {
        background: var(--color-surface);
        box-shadow: var(--shadow-sm);
    }

    html[data-theme="dark"] .case-card:hover,
    html[data-theme="dark"] .case-card:focus-within {
        box-shadow: var(--shadow-lg);
    }

    html[data-theme="dark"] .case-card__title {
        color: var(--color-text);
    }

    html[data-theme="dark"] .case-card__media {
        background: rgba(255, 255, 255, 0.03);
    }

    @media (min-width: 601px) {
        article {
            padding-left: 0.83333rem;
            padding-right: 0.83333rem;
        }
    }
    
    @media (max-width: 600px) {
        .case-card__content {
            padding: var(--space-base);
        }
        
        .case-card__title {
            font-size: 1.0625rem;
        }
        
        .case-card__cta {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }
    }
    
    @media (max-width: 480px) {
        .case-card__media {
            aspect-ratio: 2/1;
        }
    }
</style>
