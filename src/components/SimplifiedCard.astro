---
import type { CardProps } from "../types";

const { href, title, img } = Astro.props as CardProps;
---

<article class="project simplified">
    <div class="case-card">
        <a href={href} class="case-card__link" aria-label={title}>
            <div class="case-card__media">
                <img src={img} alt={`${title} preview`} loading="lazy" />
            </div>
            <div class="case-card__content">
                <h3 class="case-card__title">{title}</h3>
            </div>
        </a>
    </div>
</article>

<style>
    .case-card {
        background: var(--color-bg);
        border-radius: 18px;
        border: 1px solid rgba(0, 0, 0, 0.08);
        transition:
            transform 0.3s ease,
            box-shadow 0.3s ease;
        height: 100%;
        overflow: hidden;
    }

    .case-card__link {
        display: flex;
        flex-direction: column;
        gap: 0;
        text-decoration: none;
        height: 100%;
        color: inherit;
        border-bottom: none;
    }

    .case-card:hover,
    .case-card:focus-within {
        transform: translateY(-4px);
    }

    .case-card__content {
        padding: 1.25rem 1.5rem;
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

    .case-card__title {
        font-size: var(--text-base);
        line-height: 1.3;
        color: var(--color-text);
        margin: 0;
        font-weight: 700;
    }

    .case-card__media {
        margin: 0;
        overflow: hidden;
        background: var(--color-surface-alt);
        aspect-ratio: 2.2/1;
    }

    .case-card__media img {
        width: 100%;
        height: 100%;
        display: block;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .case-card:hover .case-card__media img {
        transform: scale(1.05);
    }

    /* Dark mode styles */
    html[data-theme="dark"] .case-card {
        background: var(--color-surface);
        box-shadow: var(--shadow-md);
    }

    html[data-theme="dark"] .case-card:hover,
    html[data-theme="dark"] .case-card:focus-within {
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4), 0 5px 15px rgba(0, 0, 0, 0.3);
    }

    html[data-theme="dark"] .case-card__title {
        color: var(--color-text);
    }

    html[data-theme="dark"] .case-card__media {
        background: rgba(255, 255, 255, 0.03);
    }

    @media (min-width: 601px) {
        article {
            padding-left: 0.83333rem;
            padding-right: 0.83333rem;
        }
    }
</style>
