---

interface Props {
  stat: string;
  description: string;
  colorClass?: 'primary' | 'secondary' | 'accent';
  icon?: string;
}

const { 
  stat, 
  description, 
  colorClass = 'primary',
  icon
} = Astro.props;

// Map color classes to actual CSS classes
const colorMap = {
  primary: 'card-primary',
  secondary: 'card-secondary',
  accent: 'card-accent'
};

// Generate simple icon if no SVG provided
const defaultIcon = `<span class="default-icon">
                      ${stat.replace(/[^0-9]/g, '')}
                     </span>`;
---

<div class={`outcome-card ${colorMap[colorClass]}`}>
  {icon ? (
    <div class="outcome-icon" set:html={icon}></div>
  ) : (
    <div class="outcome-icon" set:html={defaultIcon}></div>
  )}
  
  <div class="outcome-stat">{stat}</div>
  <div class="outcome-description">{description}</div>
</div>

<style>
  .outcome-card {
    flex: 1;
    min-width: 250px;
    border-radius: 16px;
    padding: 2.5rem 2rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  }
  
  .outcome-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }
  
  .card-primary {
    background-color: #d3dde5;
    color: #272c30;
  }
  
  .card-secondary {
    background-color: #00296b;
    color: white;
  }
  
  .card-accent {
    background-color: #f93b6b;
    color: white;
  }
  
  .outcome-icon {
    margin-bottom: 1.5rem;
  }
  
  .default-icon {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background-color: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.8rem;
    font-weight: bold;
  }
  
  .outcome-stat {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1;
    margin-bottom: 1.5rem;
    font-family: "IBM Plex Serif", serif;
  }
  
  .outcome-description {
    font-size: 1.1rem;
    line-height: 1.4;
    max-width: 200px;
  }
  
  @media (max-width: 768px) {
    .outcome-card {
      width: 100%;
      max-width: 320px;
      margin: 0 auto;
    }
  }
</style>