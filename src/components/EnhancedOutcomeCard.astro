---
interface Props {
  stat?: string;
  description: string;
  colorClass?: 'primary' | 'secondary' | 'accent';
  variant?: 'with-stat' | 'text-only';
}

const { 
  stat, 
  description, 
  colorClass = 'primary',
  variant = 'with-stat'
} = Astro.props;

// Map color classes to actual CSS classes
const colorMap = {
  primary: 'card-primary',
  secondary: 'card-secondary',
  accent: 'card-accent'
};
---

<div class={`enhanced-outcome-card ${colorMap[colorClass]} ${variant}`}>
  {variant === 'with-stat' && stat && (
    <div class="outcome-stat">{stat}</div>
  )}
  <div class="outcome-description">{description}</div>
</div>

<style>
  .enhanced-outcome-card {
    flex: 1;
    min-width: 250px;
    padding: 2rem 1.5rem;
    text-align: center;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-sm);
    position: relative;
    overflow: hidden;
    border: var(--border-default);
    border-radius: var(--radius-none);
  }

  /* Color variations */
  .card-primary {
    background: var(--gradient-surface);
    color: var(--color-text);
  }

  .card-secondary {
    background: var(--gradient-primary);
    color: white;
  }

  .card-accent {
    background: var(--color-accent);
    color: white;
  }

  /* Dark mode adjustments - tokens handle this automatically */
  :global([data-theme="dark"]) .card-primary {
    background: var(--gradient-surface);
  }

  :global([data-theme="dark"]) .card-secondary {
    background: var(--gradient-primary);
  }

  /* Stat styles with shimmer highlight on scroll */
  .outcome-stat {
    font-size: var(--text-3xl);
    font-weight: 700;
    line-height: 1;
    margin-bottom: 0.7rem;
    font-family: "IBM Plex Serif", serif;
    position: relative;
    z-index: 1;
    background: linear-gradient(
      90deg,
      var(--color-primary-800) 0%,
      var(--color-primary-800) 40%,
      var(--color-accent) 50%,
      var(--color-primary-800) 60%,
      var(--color-primary-800) 100%
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .enhanced-outcome-card.animate-stat .outcome-stat {
    animation: statShimmer 1.5s ease-out forwards;
  }

  .card-primary .outcome-stat {
    background: linear-gradient(
      90deg,
      var(--color-primary-800) 0%,
      var(--color-primary-800) 40%,
      var(--color-accent) 50%,
      var(--color-primary-800) 60%,
      var(--color-primary-800) 100%
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  :global([data-theme="dark"]) .card-primary .outcome-stat {
    background: linear-gradient(
      90deg,
      var(--color-text) 0%,
      var(--color-text) 40%,
      var(--color-accent) 50%,
      var(--color-text) 60%,
      var(--color-text) 100%
    );
    background-size: 200% 100%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  /* Description styles */
  .outcome-description {
    font-size: var(--text-sm);
    line-height: 1.4;
    max-width: 350px;
    position: relative;
    z-index: 1;
  }

  .card-secondary .outcome-description,
  .card-accent .outcome-description {
    color: rgba(255, 255, 255, 0.95);
  }

  /* Text-only variant adjustments */
  .enhanced-outcome-card.text-only {
    min-height: 120px;
  }

  .enhanced-outcome-card.text-only .outcome-description {
    font-size: var(--text-sm);
    font-weight: 500;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .enhanced-outcome-card {
      padding: 1.5rem 1rem;
      min-width: auto;
    }

    .outcome-stat {
      font-size: var(--text-2xl);
    }

    .outcome-description {
      font-size: var(--text-xs);
    }
  }
</style>