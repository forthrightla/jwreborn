---
import OutcomeCard from '../OutcomeCard.astro';

interface Outcome {
  stat: string;
  description: string;
  colorClass?: 'primary' | 'secondary' | 'accent';
  icon?: string;
}

interface Props {
  outcomes: Outcome[];
}

const { outcomes } = Astro.props;

// Default colors if none specified
const defaultColors = ['primary', 'secondary', 'accent'];
---

<div class="outcome-grid">
  {outcomes.map((outcome, index) => (
    <OutcomeCard
      stat={outcome.stat}
      description={outcome.description}
      colorClass={outcome.colorClass || defaultColors[index % defaultColors.length]}
      icon={outcome.icon}
    />
  ))}
</div>
