---
// src/components/ContentSection.astro
interface Props {
  title: string;
  variant?: 'default' | 'alternate';
  hasDivider?: boolean;
}

const { 
  title, 
  variant = 'default', 
  hasDivider = true 
} = Astro.props;

const bgClass = variant === 'alternate' ? 'bg-alt' : '';
---

<section class={`content-section ${bgClass}`}>
  <div class="section-content">
    <h2 class="section-title line-top">{title}</h2>
    
    <div class="section-body">
      <slot />
    </div>
    
    {hasDivider && <div class="section-divider"></div>}
  </div>
</section>

<style>
  .content-section {
    padding: 4rem 0;
    position: relative;
  }
  
  .content-section.bg-alt {
    background-color: #f9f9f9;
  }
  
  .section-content {
    max-width: 1140px;
    margin: 0 auto;
    padding: 0 4vw;
  }
  
  .section-title {
    position: relative;
    margin-bottom: 2.5rem;
    font-size: 2rem;
    color: #00296b;
  }
  
  .line-top:before {
    border-left: 30px solid #f93b6b;
    display: block;
    content: "";
    height: 5px;
    margin-bottom: 0.83333rem;
  }
  
  .section-body {
    margin-bottom: 2rem;
  }
  
  .section-divider {
    height: 1px;
    background: linear-gradient(to right, transparent, #e0e0e0, transparent);
    margin: 0 auto;
    max-width: 80%;
  }
  
  /* Remove divider from the last section */
  :global(.content-section:last-of-type .section-divider) {
    display: none;
  }
  
  @media (max-width: 768px) {
    .content-section {
      padding: 3rem 0;
    }
    
    .section-title {
      font-size: 1.8rem;
    }
  }
</style>