---
// src/components/ParticipantInsights.astro
interface Participant {
  name: string;
  avatar: string;
  description: string;
}

interface Props {
  theme: string;
  participants: Participant[];
  insight: string;
  context: string;
  recommendationTitle: string;
  recommendation: string;
}

const { theme, participants, insight, context, recommendationTitle, recommendation } = Astro.props;
---

<section class="participant-insights-section">
  <h3 class="theme-title">{theme}</h3>
  
  <div class="participants-grid">
    {participants.map((participant) => (
      <div class="participant-card">
        <div class="participant-header">
          <img 
            src={participant.avatar} 
            alt={`${participant.name}'s avatar`} 
            class="participant-avatar"
          />
          <h4 class="participant-name">{participant.name}</h4>
        </div>
        <p class="participant-description">{participant.description}</p>
      </div>
    ))}
  </div>

  <div class="insight-recommendation-block">
    <div class="insight-section">
      <h4 class="section-label">Insight</h4>
      <p class="insight-text">{insight}</p>
      <p class="context-text">{context}</p>
    </div>
    
    <div class="divider"></div>
    
    <div class="recommendation-section">
      <h4 class="section-label">Recommendation</h4>
      <p class="recommendation-title">{recommendationTitle}</p>
      <p class="recommendation-text">{recommendation}</p>
    </div>
  </div>
</section>

<style>
  .participant-insights-section {
    margin: 3rem 0;
    background: transparent;
    border-radius: 20px;
    padding: 3rem;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
    position: relative;
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  /* Add subtle background pattern */
  .participant-insights-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(249, 59, 107, 0.05) 0%, transparent 70%);
    border-radius: 50%;
    pointer-events: none;
  }
  :global([data-theme="dark"]) .participant-insights-section::before {
    background: radial-gradient(circle, rgba(249, 59, 107, 0.08) 0%, transparent 70%);
  }

  .theme-title {
    font-family: "IBM Plex Serif", serif;
    font-size: 2rem;
    color: var(--color-text);
    margin-bottom: 2.5rem;
    position: relative;
  }

 

  /* Participants Grid */
  .participants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .participant-card {
    background: transparent;
    border-radius: 12px;
    padding: 1.75rem;
    border: 1px solid var(--color-border);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .participant-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 15px rgba(249, 59, 107, 0.15);
  }

  .participant-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .participant-avatar {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
  }

  .participant-name {
    font-family: "Funnel Sans", sans-serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .participant-description {
    font-size: 1rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0;
  }

  /* Combined Insight and Recommendation Block */
  .insight-recommendation-block {
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: 12px;
    margin: 0 -0.5rem;
    overflow: hidden;
  }

  .insight-section,
  .recommendation-section {
    padding: 2rem;
  }

  .section-label {
    font-family: "Funnel Sans", sans-serif;
    font-size: 0.75rem;
    font-weight: 700;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1rem 0;
    opacity: 0.7;
  }

  .insight-text,
  .recommendation-title {
    font-family: "IBM Plex Serif", serif;
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .context-text,
  .recommendation-text {
    font-size: 1.05rem;
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0;
    max-width: 800px;
  }

  .divider {
    height: 1px;
    background: linear-gradient(to right, transparent, var(--color-divider) 20%, var(--color-divider) 80%, transparent);
    margin: 0 2rem;
  }

  /* Add accent for insight section */
  .insight-section {
    position: relative;
  }

  .insight-section::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-primary-800);
  }

  /* Add accent for recommendation section */
  .recommendation-section {
    position: relative;
    background: transparent;
  }

  .recommendation-section::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-accent);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .participant-insights-section {
      padding: 2rem;
      margin: 2rem 0;
    }

    .theme-title {
      font-size: 1.6rem;
      margin-bottom: 2rem;
    }

    .participants-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .participant-card {
      padding: 1.5rem;
    }

    .participant-avatar {
      width: 50px;
      height: 50px;
    }

    .participant-name {
      font-size: 1.1rem;
    }

    .insight-recommendation-block {
      padding: 1.5rem;
      margin: 0 -0.25rem;
    }

    .insight-section,
    .recommendation-section {
      padding: 1.5rem;
    }

    .divider {
      margin: 0 1.5rem;
    }

    .insight-text {
      font-size: 1.15rem;
    }

    .context-text,
    .recommendation-text {
      font-size: 1rem;
    }
  }

  @media (max-width: 480px) {
    .participant-insights-section {
      padding: 1.5rem;
      border-radius: 16px;
    }

    .theme-title {
      font-size: 1.4rem;
      padding-left: 0.75rem;
    }

    .participant-card {
      padding: 1.25rem;
    }

    .participant-header {
      gap: 0.75rem;
    }

    .participant-avatar {
      width: 45px;
      height: 45px;
    }

    .insight-recommendation-block {
      padding: 1.25rem;
      border-radius: 10px;
    }

    .insight-section,
    .recommendation-section {
      padding: 1.25rem;
    }

    .divider {
      margin: 0 1.25rem;
    }
  }
</style>