---
// src/components/ParticipantInsights.astro
interface Participant {
  name: string;
  avatar: string;
  description: string;
}

interface Props {
  theme: string;
  participants: Participant[];
  insight: string;
  context: string;
  recommendationTitle: string;
  recommendation: string;
}

const { theme, participants, insight, context, recommendationTitle, recommendation } = Astro.props;
---

<section class="participant-insights-section">
  <h3 class="theme-title">{theme}</h3>
  
  <div class="participants-grid">
    {participants.map((participant) => (
      <div class="participant-card">
        <div class="participant-header">
          <img 
            src={participant.avatar} 
            alt={`Portrait of ${participant.name}`} 
            class="participant-avatar"
          />
          <h4 class="participant-name">{participant.name}</h4>
        </div>
        <p class="participant-description">{participant.description}</p>
      </div>
    ))}
  </div>

  <div class="insight-recommendation-block">
    <div class="insight-section">
      <h4 class="section-label">
        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
        </svg>
        Insight
      </h4>
      <p class="insight-text">{insight}</p>
      <p class="context-text">{context}</p>
    </div>
    
    <div class="divider"></div>
    
    <div class="recommendation-section">
      <h4 class="section-label">
        <svg class="label-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" aria-hidden="true">
          <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Recommendation
      </h4>
      <p class="recommendation-title">{recommendationTitle}</p>
      <p class="recommendation-text">{recommendation}</p>
    </div>
  </div>
</section>

<style>
  .participant-insights-section {
    margin: 3rem 0;
    background: transparent;
    border-radius: var(--radius-lg);
    padding: 3rem;
    box-shadow: var(--shadow-sm);
    position: relative;
    overflow: hidden;
    border: var(--border-default);
  }

  /* Add subtle background pattern */
  .participant-insights-section::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -10%;
    width: 300px;
    height: 300px;
    background: var(--gradient-accent-glow);
    border-radius: var(--radius-full);
    pointer-events: none;
  }

  .theme-title {
    font-family: "IBM Plex Serif", serif;
    font-size: var(--text-lg);
    color: var(--color-text);
    margin-bottom: 2rem;
    position: relative;
    padding-top: var(--space-xl);
  }

  .theme-title::before {
    content: "\201C";
    display: block;
    font-size: 3.333rem;
    font-family: Georgia, 'Times New Roman', Times, serif;
    font-weight: bold;
    color: var(--color-primary-600);
    line-height: 1.3rem;
    position: absolute;
    font-style: normal;
    top: 0;
    left: 0;
  }

 

  /* Participants Grid */
  .participants-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2.5rem;
  }

  .participant-card {
    background: var(--gradient-surface-fade);
    border-radius: var(--radius-md);
    padding: 1.75rem;
  }

  .participant-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .participant-avatar {
    width: 56px;
    height: 56px;
    border-radius: var(--radius-full);
    object-fit: cover;
    flex-shrink: 0;
    border: 3px solid var(--color-accent);
    padding: 2px;
    background: var(--color-bg);
  }

  .participant-name {
    font-family: "Funnel Sans", sans-serif;
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .participant-description {
    font-size: var(--text-sm);
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0;
  }

  /* Combined Insight and Recommendation Block */
  .insight-recommendation-block {
    background: transparent;
    border-radius: var(--radius-md);
    overflow: hidden;
  }

  .insight-section,
  .recommendation-section {
    padding: 2rem;
  }

  .section-label {
    font-family: "Funnel Sans", sans-serif;
    font-size: var(--text-xs);
    font-weight: 700;
    color: var(--color-text);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin: 0 0 1rem 0;
    opacity: 0.7;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .label-icon {
    width: 1.1em;
    height: 1.1em;
    stroke-linecap: round;
    stroke-linejoin: round;
    opacity: 0.8;
  }

  .insight-text,
  .recommendation-title {
    font-family: "IBM Plex Serif", serif;
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    margin: 0 0 0.75rem 0;
    line-height: 1.4;
  }

  .context-text,
  .recommendation-text {
    font-size: var(--text-sm);
    line-height: 1.6;
    color: var(--color-text-muted);
    margin: 0;
    max-width: 800px;
  }

  .divider {
    height: 1px;
    background: var(--gradient-divider);
    margin: 0 2rem;
  }

  /* Add accent for insight section */
  .insight-section {
    position: relative;
    background: var(--gradient-primary-subtle);
  }

  .insight-section::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-primary-600);
  }

  /* Add accent for recommendation section */
  .recommendation-section {
    position: relative;
    background: var(--gradient-accent-subtle);
  }

  .recommendation-section::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: var(--color-accent);
  }

  /* Responsive Design */
  @media (max-width: 768px) {
    .participant-insights-section {
      padding: 2rem;
      margin: 2rem 0;
    }

    .theme-title {
      font-size: var(--text-lg);
      margin-bottom: 2rem;
      padding-top: var(--space-lg);
    }

    .theme-title::before {
      font-size: 2.5rem;
    }

    .participants-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .participant-card {
      padding: 1.5rem;
    }

    .participant-avatar {
      width: 50px;
      height: 50px;
    }

    .participant-name {
      font-size: var(--text-sm);
    }

    .insight-recommendation-block {
      padding: 1.5rem;
    }

    .insight-section,
    .recommendation-section {
      padding: 1.5rem;
    }

    .divider {
      margin: 0 1.5rem;
    }

    .insight-text {
      font-size: var(--text-sm);
    }

    .context-text,
    .recommendation-text {
      font-size: var(--text-sm);
    }
  }

  @media (max-width: 480px) {
    .participant-insights-section {
      padding: 1.5rem;
      border-radius: 16px;
    }

    .theme-title {
      font-size: var(--text-base);
      padding-top: var(--space-lg);
    }

    .theme-title::before {
      font-size: 2rem;
    }

    .participant-card {
      padding: 1.25rem;
    }

    .participant-header {
      gap: 0.75rem;
    }

    .participant-avatar {
      width: 45px;
      height: 45px;
    }

    .insight-recommendation-block {
      padding: 1.25rem;
      border-radius: 10px;
    }

    .insight-section,
    .recommendation-section {
      padding: 1.25rem;
    }

    .divider {
      margin: 0 1.25rem;
    }
  }
</style>