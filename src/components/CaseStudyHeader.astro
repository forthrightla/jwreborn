---

interface Props {
  title: string;
  subtitle: string;
  bannerImage: string;
  overview?: string;
  quote?: {
    text: string;
    author?: string;
  };
}

const { title, subtitle, bannerImage, overview, quote } = Astro.props;
---

<section class="case-study-header">
  <div class="header-content">
    <div class="header-text">
      <h1>{title}</h1>
      <p class="subtitle">{subtitle}</p>
      
      {overview && <p class="overview">{overview}</p>}
      
      {quote && (
        <blockquote class="header-quote">
          <p>"{quote.text}"</p>
          {quote.author && <cite>â€” {quote.author}</cite>}
        </blockquote>
      )}
    </div>
    
    <div class="header-image">
      <img src={bannerImage} alt={`${title} case study banner`} />
    </div>
  </div>
</section>

