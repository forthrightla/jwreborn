---
interface BulletItem {
  text: string;
  emphasis?: 'primary' | 'muted';
}

interface Props {
  items: BulletItem[];
  columns?: 1 | 2 | 3;
}

const { 
  items,
  columns = 1
} = Astro.props;
---

<ul class={`styled-bullet-list columns-${columns}`}>
  {items.map((item) => (
    <li class={`bullet-item ${item.emphasis || 'primary'}`}>
      <span class="bullet-icon" aria-hidden="true"></span>
      <span class="bullet-text">{item.text}</span>
    </li>
  ))}
</ul>

<style>
  .styled-bullet-list {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
    display: grid;
    gap: 1rem;
  }

  .columns-1 {
    grid-template-columns: 1fr;
  }

  .columns-2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .columns-3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .bullet-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 1rem 1.25rem;
    background: var(--gradient-surface);
    border: var(--border-default);
    border-radius: var(--radius-none);
    box-shadow: var(--shadow-sm);
  }

  .bullet-item.primary {
    border-left: 3px solid var(--color-primary);
  }

  .bullet-item.muted {
    border-left: 3px solid var(--color-text-muted);
  }

  .bullet-icon {
    flex-shrink: 0;
    width: 8px;
    height: 8px;
    margin-top: 0.45rem;
    border-radius: 50%;
  }

  .bullet-item.primary .bullet-icon {
    background: var(--color-primary);
  }

  .bullet-item.muted .bullet-icon {
    background: var(--color-text-muted);
    opacity: 0.6;
  }

  .bullet-text {
    font-size: var(--text-sm);
    line-height: 1.5;
    color: var(--color-text);
  }

  .bullet-item.muted .bullet-text {
    color: var(--color-text-muted);
  }

  @media (max-width: 768px) {
    .columns-2,
    .columns-3 {
      grid-template-columns: 1fr;
    }
  }
</style>
